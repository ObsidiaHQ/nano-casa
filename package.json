{
  "name": "nano-casa",
  "version": "2.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "bundle": "ng build --source-map=true; source-map-explorer ./dist/nano-casa/main.*.js",
    "postbuild": "bun run purgecss.js",
    "server:dev": "bun run --watch server/server.ts",
    "server:prod": "NODE_ENV='production'; bun server.ts",
    "server:cron": "bun run server/cron.ts",
    "server:bundle": "bun build server/server.ts --target=bun --outdir=./dist; bun build server/cron.ts --target=bun --outdir=./dist;",
    "server:cron2": "bun run server/cron2.ts",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:generate": "bunx drizzle-kit generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.10",
    "@angular/cdk": "^18.2.2",
    "@angular/common": "^20.3.10",
    "@angular/compiler": "^20.3.10",
    "@angular/core": "^20.3.10",
    "@angular/forms": "^20.3.10",
    "@angular/platform-browser": "^20.3.10",
    "@angular/platform-browser-dynamic": "^20.3.10",
    "@angular/router": "^20.3.10",
    "@hono/zod-validator": "^0.7.5",
    "@metamask/providers": "^18.3.1",
    "@tabler/core": "^1.0.0-beta20",
    "axios": "^1.7.7",
    "better-auth": "1.3.34",
    "croner": "^9.1.0",
    "date-fns": "^4.1.0",
    "discord.js": "^14.16.1",
    "drizzle-orm": "^0.44.7",
    "echarts": "^6.0.0",
    "hono": "^4.10.6",
    "jw-paginate": "^1.0.4",
    "ngx-countup": "^13.2.0",
    "ngx-echarts": "^20.0.2",
    "ngx-timeago": "^4.0.0",
    "octokit": "^5.0.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.12",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.10",
    "@types/bun": "^1.3.3",
    "@types/jasmine": "~5.1.0",
    "better-sqlite3": "^12.4.6",
    "drizzle-kit": "^0.31.7",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "purgecss": "^5.0.0",
    "source-map-explorer": "^2.5.3",
    "typescript": "~5.9.3"
  }
}